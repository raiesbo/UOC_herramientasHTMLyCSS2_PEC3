{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "block-no-empty": true,
    "max-nesting-depth": 3,
    "property-case": "lower",
    "indentation": 2,
    "max-line-length": 80,
    "declaration-block-single-line-max-declarations": 1
  }
}